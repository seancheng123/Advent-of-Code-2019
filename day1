import java.util.Scanner;

public class icbgjndgklv {
	public static void main(String[] args) {
		Scanner obj = new Scanner(System.in);
		
		int number = obj.nextInt();
		int[] batwomanspantaloons = new int[number];
		int sum = 0;
		for(int i = 0; i < number; i++) {
			int integer = obj.nextInt();
			batwomanspantaloons[i]=integer;
			sum += integer;
		}
		
		System.out.print((double)sum/batwomanspantaloons.length);
		
		
		
		
		//cool beans
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}
}
